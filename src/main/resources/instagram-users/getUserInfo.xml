<template name="getUserInfo" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="userId" description="The user ID"/>
    <sequence>
        <property name="uri.var.userId" expression="$func:userId"/>
        <call>
            <endpoint>
                <http method="GET"
                      uri-template="{uri.var.apiUrl}/users/{+uri.var.userId}?access_token={+uri.var.accessToken}"/>
            </endpoint>
        </call>
    </sequence>
</template>
